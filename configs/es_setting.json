{
  "index" : {
     "number_of_shards" : 3,
     "number_of_replicas" : 1
  },
  "analysis": {
    "tokenizer": {
      "cutter_tokenizer": {
        "type": "pattern",
        "pattern": "/"
      }
    },
    "analyzer": {
      "keyword_analyzer": {
        "tokenizer": "keyword"
      },
      "cutter_analyzer": {
        "tokenizer": "cutter_tokenizer"
      },
      "zh_index_analyzer": {
          "tokenizer": "jieba_index",
          "filter": [
            "lowercase",
            "jieba_stop",
            "trim",
            "remove_empty"
          ]
      },
      "zh_search_analyzer": {
        "tokenizer": "jieba_search",
        "filter": [
          "lowercase",
          "jieba_stop",
          "trim",
          "remove_empty"
        ]
      }
    },
    "filter": {
        "jieba_stop": {
          "type":        "stop",
          "stopwords_path": "stopwords/stopwords.txt"
        },
        "remove_empty": {
            "type": "stop",
            "stopwords": [""]
        }
      }
  },
  "similarity": {
    "tf_alone": {
        "type": "scripted",
        "script": {
            "source": "double tf = doc.freq; return tf;"
        }
    }
  }
}